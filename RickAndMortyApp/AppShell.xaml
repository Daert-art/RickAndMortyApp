<Shell
    x:Class="RickAndMortyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:RickAndMortyApp.Presentation.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="RickAndMortyApp">

    <ShellContent
        Title="Characters"
        ContentTemplate="{DataTemplate views:MainPage}"/>

    <ShellContent
        Title="Character Detail"
        Route="characterdetail"
        ContentTemplate="{DataTemplate views:CharacterDetailPage}"/>
</Shell>
